     "ns_name": "meta",
     "type_name": "namespace",
     "key_name": "namespace_ns_url_rev_idx",
     "key_inherit": true,
     "key_attr_index": [1,2],
 },

 /* These unique constraints are inherited by all of the types which
  * inherit from them.
  */
 {
     "ns_name": "meta",
     "type_name": "type",
     "key_name": "type_ns_name_type_name_idx",
     "key_inherit": true,
     "key_attr_index": [0,1],
 },
 {
