     "key_attr_index": [0,2],
 },

 /* each attribute has an index, and this unique index asserts that no
    two attributes defined on a type have the same index position.
 */
 {
     "ns_name": "meta",
     "type_name": "attr",
     "key_name": "attr_ns_name_type_name_attr_index_unique",
     "key_inherit": true,
     "key_attr_index": [0,1,2],
 },

 /* implement one schema-wide namespace for index names */
 {
